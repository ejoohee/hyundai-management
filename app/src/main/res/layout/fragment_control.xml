<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ControlFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="5dp"
            android:text="CONTROL"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="5dp"
            android:text="GV80"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewCarControl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="차량 제어"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- 차량 제어 항목들 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewLocked"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/circle_background_on"
                            android:padding="16dp"
                            app:srcCompat="@drawable/ic_lock" />

                        <TextView
                            android:id="@+id/textViewLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="문 잠김" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewPowerOff"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/circle_background_on"
                            android:padding="16dp"
                            app:srcCompat="@drawable/ic_power" />

                        <TextView
                            android:id="@+id/textViewPower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="시동 꺼짐" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewFanOff"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/circle_background_on"
                            android:padding="16dp"
                            app:srcCompat="@drawable/ic_fan" />

                        <TextView
                            android:id="@+id/textViewFan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="선풍기 꺼짐" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 아래쪽 차량 제어 항목들 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewOpen"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/circle_background"
                            android:padding="16dp"
                            app:srcCompat="@drawable/ic_unlocked" />

                        <TextView
                            android:id="@+id/textViewUnlock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="문 열림" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewPowerOn"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/circle_background"
                            android:padding="16dp"
                            app:srcCompat="@drawable/ic_power" />

                        <TextView
                            android:id="@+id/textViewPowerOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="시동 켜짐" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewFanOn"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/circle_background"
                            android:padding="16dp"
                            app:srcCompat="@drawable/ic_fan" />

                        <TextView
                            android:id="@+id/textViewFanOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="선풍기 켜짐" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 시동 공조 설정 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corner_white"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title TextView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="시동 공조 설정"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- Minus Button -->
                <ImageButton
                    android:id="@+id/imageButtonMinus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|start"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/circle_background"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_minus" />

                <!-- Temperature Text -->
                <TextView
                    android:id="@+id/textViewTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="clip_horizontal|center"
                    android:text="24.0℃"
                    android:textColor="#03A9F4"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <!-- Plus Button -->
                <ImageButton
                    android:id="@+id/imageButtonPlus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|end"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/circle_background"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_plus" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- "E" 텍스트 -->

                <!-- 바 -->
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progress="50"
                    android:splitTrack="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LOW" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="HIGH" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>
